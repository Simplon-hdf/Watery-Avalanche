{% extends 'base.html.twig' %}

{% block title %}
  Dashboard
{% endblock %}

{% block body %}
  {% include './header.html.twig' %}

  <div class="container-dashboard">
    <div class="left-side-dashboard">
      <h1>
        Check your bank accounts
      </h1>
      <p>Check the massive amount of coins you own in our safe:</p><br />
      <a class="link" href="{{ path('app_account_index') }}">View accounts</a>
    </div>

    <div class="right-side-dashboard">
      <h1>
        Create a new bank account
      </h1>
      <p>Create a new storage unit for your hard earned coins:</p>
      <br />
      <a class="link" href="{{ path('app_account_new') }}">Create bank account</a>
    </div>
    <div class="left-side-dashboard">
      <h1>
        Add a transaction
      </h1>
      <a>
        Transfer your coins from an account to an other in a blink of an eye:
      </a><br />
      <a href="{{ path('app_transaction_new') }}">Create a transaction</a>
    </div>
  </div>
{% endblock %}
